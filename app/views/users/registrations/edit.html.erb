<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= link_to "Back", :back %>

<br /> <br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <br />

  <div>
    <%= f.label :role_ids, 'Roles', style: "display: block" %>
    <%= f.collection_check_boxes :role_ids, Role.all, :id, :name do |b| %>
      <%= label_tag () { b.check_box() + content_tag(:span, b.text ) } %> &nbsp;
    <% end %>
  </div>

  <br />

  <%= f.fields_for :details do |details_form| %>

    <div class="field">
      <%= details_form.label :first_name %><br />
      <%= details_form.text_field :first_name %>
    </div>

    <div class="field">
      <%= details_form.label :last_name %><br />
      <%= details_form.text_field :last_name %>
    </div>

    <div class="field">
      <%= details_form.label :phone_number %><br />
      <%= details_form.text_field :phone_number %>
    </div>

    <div class="field">
      <%= details_form.label :additional_info %><br />
      <%= details_form.text_area :additional_info, class: 'materialize-textarea' %>
    </div>

    <div class="field">
      <%= details_form.label :status_id %><br />
      <%= details_form.select :status_id, (@statuses.map{|status|[status[:name],status[:id]]}), {include_blank: 'Please Select a Status'}, required: true %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Update", class: 'btn waves-effect waves-light' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),  class: 'btn waves-effect waves-light red lighten-2', data: { confirm: "Are you sure?" }, method: :delete %></p>

<br />