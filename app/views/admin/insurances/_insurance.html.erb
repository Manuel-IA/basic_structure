<div class="row">
  <div class="col s12 m6">
    <div class="card" id="<%= dom_id insurance %>" style="margin-bottom: 0px;">
      <div class="card-content">
        <span class="card-title"><%= insurance.name %></span>
        <p>
          <strong>Name:</strong>
          <%= insurance.name %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= insurance.email %>
        </p>

        <p>
          <strong>Contact name:</strong>
          <%= insurance.contact_name %>
        </p>

        <p>
          <strong>Color:</strong>
          <%= insurance.color %>
        </p>

        <p>
          <strong><%= link_to "<u>Users</u>".html_safe, admin_users_url(insurance_id: insurance.id) %>:</strong>
          <% insurance.users.each do | user | %>
            <%= link_to user.email, admin_user_url(id: user.id), data: { turbo: false } %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>