<div class="row">
  <div class="col s12 m6">
    <div class="card" id="<%= dom_id user %>" style="margin-bottom: 0px;">
      <div class="card-content">
        <span class="card-title"><%= user.email %></span>
        <p>
          <strong>Roles:</strong> &nbsp;
          <% user.roles.each do | role | %>
            <%= role[:name] %> &nbsp;
          <% end %>
        </p>

        <p>
          <strong>First name:</strong>
          <%= user.first_name %>
        </p>

        <p>
          <strong>Last name:</strong>
          <%= user.last_name %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= user.phone_number %>
        </p>

        <p>
          <strong>Additional info:</strong>
          <%= user.additional_info %>
        </p>

        <p>
          <strong>Status:</strong>
          <%= user.details.status[:name] %>
        </p>

        <p>
          <strong><%= link_to "<u>Insurances</u>".html_safe, admin_insurances_url(user_id: user.id), data: { turbo: false } %>:</strong>
          <% user.insurances.each do | insurance | %>
            <%= link_to insurance.name, admin_insurance_url(id: insurance.id), data: { turbo: false } %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>