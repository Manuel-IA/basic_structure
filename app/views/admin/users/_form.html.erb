<%= form_with(model: admin_user) do |form| %>
  <% if admin_user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_user.errors.count, "error") %> prohibited this admin_user from being saved:</h2>

      <ul>
        <% admin_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <br />

  <div>
    <%= form.label :role_ids, 'Roles', style: "display: block" %>
    <%= form.collection_check_boxes :role_ids, Role.all, :id, :name do |b| %>
      <%= label_tag () { b.check_box() + content_tag(:span, b.text ) } %> &nbsp;
    <% end %>
  </div>

  <br />

  <%= form.fields_for :details do |details_form| %>
    <div>
      <%= details_form.label :first_name, style: "display: block" %>
      <%= details_form.text_field :first_name %>
    </div>

    <div>
      <%= details_form.label :last_name, style: "display: block" %>
      <%= details_form.text_field :last_name %>
    </div>

    <div>
      <%= details_form.label :phone_number, style: "display: block" %>
      <%= details_form.text_field :phone_number %>
    </div>

    <div>
      <%= details_form.label :additional_info, style: "display: block" %>
      <%= details_form.text_area :additional_info, class: 'materialize-textarea' %>
    </div>

    <div>
      <%= details_form.label :status_id, style: "display: block" %>
      <%= details_form.select :status_id, (@statuses.map{|status|[status[:name],status[:id]]}), {include_blank: 'Please Select a Status'}, required: true %>
    </div>
  <% end %>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :insurance_ids, 'Insurances', style: "display: block" %>
    <%= form.collection_check_boxes :insurance_ids, Insurance.all, :id, :name do |b| %>
      <%= label_tag () { b.check_box() + content_tag(:span, b.text ) } %> &nbsp;
    <% end %>
  </div>
  <br />

  <div>
    <%= form.submit class: 'btn waves-effect waves-light' %>
  </div>
<% end %>

<br />
