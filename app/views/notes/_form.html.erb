<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <% if !@entity.blank? %>
    <%= form.hidden_field :entity_id, value: @entity[1] %>
    <%= form.hidden_field :entity_type, value: @entity[0].capitalize %>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content, class: 'materialize-textarea'%>
  </div>

  <div>
    <%= form.submit class: 'btn waves-effect waves-light' %>
  </div>
<% end %>
