<%= form_with(model: assignament) do |form| %>
  <% if assignament.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(assignament.errors.count, "error") %> prohibited this assignament from being saved:</h2>

      <ul>
        <% assignament.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :status_id, value: 1 %>

  <div>
    <%= form.label :owner_name, style: "display: block" %>
    <%= form.text_field :owner_name %>
  </div>

  <div>
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :vin_number, style: "display: block" %>
    <%= form.number_field :vin_number %>
  </div>

  <div>
    <%= form.label :po, style: "display: block" %>
    <%= form.number_field :po %>
  </div>

  <div>
    <%= form.label :plate, style: "display: block" %>
    <%= form.text_field :plate %>
  </div>

  <br />

  <label>
    <%= form.check_box :deductible %>
    <%= content_tag :span, :deductible, style: "display: block" %>
  </label>

  <br />

  <label>
    <%= form.check_box :insurance_aproval %>
    <%= content_tag :span, :insurance_aproval, style: "display: block" %>
  </label>

  <br />

  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.color_field :color %>
  </div>

  <div>
    <%= form.label :make, style: "display: block" %>
    <%= form.text_field :make %>
  </div>

  <div>
    <%= form.label :model, style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :year, style: "display: block", min: 1900, max: 2999 %>
    <%= form.number_field :year %>
  </div>

  <div>
    <%= form.label :comment, style: "display: block" %>
    <%= form.text_area :comment, class: 'materialize-textarea' %>
  </div>
  <br />

  <div>
    <%= form.submit class: 'btn waves-effect waves-light' %>
  </div>
<% end %>
